      header.mb-auto
        div
          h3.float-md-start.mb-0= message
          nav.nav.nav-masthead.justify-content-center.float-md-end
            a.nav-link.active(href="#") Home
            a.nav-link(href="#") Features
            a.nav-link(href="#") Contact

      main.px-3
